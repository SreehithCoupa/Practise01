<%= link_to 'Home Page',{controller:'main',action:'index'} %>
<h1>Tasks#index</h1>
<p>Index page</p>

<%= link_to "+ Add new task", new_task_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Positiion</th>
    <th>isCompleted</th>
    <th>Category</th>
  </tr>

<% @tasks.each do |task| %>
<tr>
  <td><%=task.name %></td>
  <td><%=task.description %></td>
  <td><%=task.position %></td>
  <td><%=task.isCompleted? ? 'Yes': 'No' %></td>
  <td><%=task.category&.name || '-'%></td>
  <td><%=link_to "Show",task_path(task.id) %>
  <td><%=link_to "Edit",edit_task_path(task.id) %>
  <td><%=link_to "Delete",delete_task_path(task) %>
</tr>

<%end %>
</table>
